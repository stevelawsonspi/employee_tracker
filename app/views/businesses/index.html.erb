<p id="notice"><%= notice %></p>

<h3 class="text-center">Businesses</h3>

<table class="table table-hover table-sm table-striped">
  <thead>
    <tr>
	  <th>Name</th>
	  <th>ABN</th>
    <th></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
		    <td><%= link_to business.name, business_path(business) %></td>
		    <td><%= business.abn %></td>
        <td>
          <%= edit_link   edit_business_path(business) %>
          <%= delete_link business %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path, class: 'btn btn-primary' %>
