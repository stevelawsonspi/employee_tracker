<% if notice %>
  <div id="notice" class="alert alert-success">
    <%= notice %>
    <button class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>
<br>
<h3>Businesses</h3>
<br>
<table class="table table-hover table-sm table-striped">
  <thead>
    <tr>
	  <th>Name</th>
	  <th>ABN</th>
    <th></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
		    <td><%= link_to business.name, user_business_path(business) %></td>
		    <td><%= business.abn %></td>
        <td>
          <%= edit_link   edit_user_business_path(business) %>
          <%= delete_link user_business_path(business), confirm_message: "Are you sure you want to delete #{business.name}?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_user_business_path, class: 'btn btn-primary' %>
